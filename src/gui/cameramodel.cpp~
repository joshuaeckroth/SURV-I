
#include "cameramodel.h"

CameraModel* CameraModel::pinstance = NULL;

CameraModel* CameraModel::instance()
{
  if(pinstance == NULL)
    pinstance = new CameraModel;

  return pinstance;
}

void CameraModel::setNumCameras(int n)
{
  if(pinstance == NULL)
    pinstance = new CameraModel;

  pinstance->numCameras = n;
}

CameraModel::CameraModel()
{

}
